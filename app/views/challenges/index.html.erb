<% content_for :title do %><%= Challenge.model_name.human.pluralize %> - <%= t 'application.name' %><% end %>
<div class="page-header">
  <h1><%= current_user.name %></h1>
</div>

<ul class="nav nav-tabs">
  <li><%= link_to t('tournaments.index.feed'), root_path %></li>
  <li class="active"><%= link_to challenges_path do %><%= Challenge.model_name.human.pluralize %> <%= defending_count_badge %><% end %></li>
  <li><%= link_to games_path do %><%= Game.model_name.human.pluralize %> <%= pending_confirmation_badge %><% end %></li>
</ul>

<% if @defending.any? %>
  <h2><%= t '.defending' %></h2>
  <ul>
    <% @defending.each do |challenge| %>
      <li><%= link_to challenge_path(challenge) do %><%= gravatar_image_tag challenge.challenger.email %> <%= challenge.challenger.name %> on <%= challenge.tournament.name %><% end %></li>
    <% end %>
  </ul>
<% end %>

<% if @challenging.any? %>
  <h2><%= t '.challenging' %></h2>
  <ul>
    <% @challenging.each do |challenge| %>
      <li><%= link_to challenge_path(challenge) do %><%= gravatar_image_tag challenge.defender.email %> <%= challenge.defender.name %> on <%= challenge.tournament.name %><% end %></li>
    <% end %>
  </ul>
<% end %>
