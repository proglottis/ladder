<% if @games.any? %>
  <table class="table table-hover">
    <thead>
      <tr>
        <th><%= t('.name') %></th>
        <th><%= t('.status') %></th>
        <th><%= t('.date') %></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @games.each do |game| %>
        <tr>
          <td><%= link_to game.versus, game_path(game) %></td>
          <td><%= game.current_state.humanize %></td>
          <td><%= time_ago_in_words game.created_at %> ago</td>
          <td>
            <%= confirm_link tournament_game_confirm_path(@tournament, game) %>
            <%= delete_link tournament_game_path(@tournament, game) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <%= t('.no_games') %>
<% end %>
