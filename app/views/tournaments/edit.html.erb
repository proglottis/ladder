<%= form_for @tournament, :html => {:class => 'form-horizontal'} do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name %>
    </div>
  </div>
  <%= f.fields_for :page do |builder| %>
    <div class="control-group">
      <%= builder.label :content, :class => 'control-label' %>
      <div class="controls">
        <%= builder.text_area :content, :class => 'input-xxlarge' %>
      </div>
    </div>
  <% end %>
  <div class="control-group">
    <div class="controls">
      <%= f.submit :class => 'btn btn-primary' %>
      <%= cancel_link tournament_path(@tournament) %>
    </div>
  </div>
<% end %>
